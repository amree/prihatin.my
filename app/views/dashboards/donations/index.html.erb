<section class="container grid-960">
  <div class="columns">
    <div class="column col-md-12 col-12">
      <%= render "dashboards/shared/menu", active: "donations" %>
    </div>
    <div class="column col-md-12 col-12">
      <% if @donations.any? %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th><%= t(".table_column_campaign") %></th>
              <th><%= t(".table_column_date") %></th>
              <th class="text-right">
                <%= t(".table_column_amount") %> (<%= t("currency") %>)
              </th>
            </tr>
          </thead>
          <tbody>
            <% @donations.each do |donation| %>
              <tr>
                <td>
                  <%= link_to donation.campaign.title,
                    campaign_slug_path(donation.campaign.slug),
                    target: "_blank"
                  %>
                </td>
                <td><%= donation.donated_on %></td>
                <td class="text-right"><%= donation.pretty_total_amount %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <section class="empty">
          <div class="empty-icon">
            <span class="icon icon-banknote"></span>
          </div>
          <h4 class="empty-title"><%= t(".no_donation") %></h4>
          <p class="empty-subtitle"><%= t(".suggest_donate") %></p>
          <div class="empty-action">
            <%= link_to t(".donate_button"), root_path, class: "btn btn-primary" %>
          </div>
        </section>
      <% end %>
    </div>
  </div>
</section>
