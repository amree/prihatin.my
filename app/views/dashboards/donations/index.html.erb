<section class="container grid-960">
  <div class="columns">
    <div class="column col-md-12 col-12">
      <%= render "dashboards/shared/menu", active: "donations" %>
    </div>
    <div class="column col-md-12 col-12">
      <% if @donations.any? %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Campaign</th>
              <th>Date</th>
              <th class="text-right">Amount (RM)</th>
            </tr>
          </thead>
          <tbody>
            <tr class="active">
              <td>The Shawshank Redemption</td>
              <td>14 October 1994</td>
              <td class="text-right">Crime, Drama</td>
            </tr>
          </tbody>
        </table>
      <% else %>
        <section class="empty">
          <div class="empty-icon">
            <span class="icon icon-banknote"></span>
          </div>
          <h4 class="empty-title"><%= t(".no_donation") %></h4>
          <p class="empty-subtitle"><%= t(".suggest_donate") %></p>
          <div class="empty-action">
            <%= link_to t(".donate_button"), root_path, class: "btn btn-primary" %>
          </div>
        </section>
      <% end %>
    </div>
  </div>
</section>
