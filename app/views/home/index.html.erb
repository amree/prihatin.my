<div class="banner">
  <h4><%= t(".headline") %></h4>
  <a href="https://goo.gl/forms/sfevjj5W9JSVhvrz1"
     target="_blank"
     class="btn btn-lg btn-primary">
    <%= t(".action") %>
  </a>
</div>
<div class="container grid-960">
  <div class="mission">
    <h4><%= t(".mission_title", site_name: t("website_name")) %></h4>
    <p><%= t(".mission_body_1_html") %></p>
    <p><%= t(".mission_body_2") %></p>
  </div>
</div>
<div class="cards container">
  <div class="columns">
    <% if @campaigns.any? %>
      <% @campaigns.each do |campaign| %>
        <%= render "card", campaign: campaign %>
      <% end %>
    <% end %>
  </div>
</div>
