<div class="preview-wrapper">
  <h5><%= t(".title") %></h5>
  <p class="first">
    <%= t(".to") %>
    <%= campaign.organizer.name %>
  </p>
  <p>
    <%= t(".for") %>
    <%= link_to campaign.title,
      campaign_slug_path(campaign.slug)
    %>
  </p>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= t(".name") %></th>
        <th class="amount">
          <%= t(".amount") %>
          (<%= t("currency") %>)
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= t(".net_amount") %></td>
        <td class="amount amount-net">
          <%= preview.net_amount %>
        </td>
      </tr>
      <tr>
        <td><%= t(".transaction_fee") %></td>
        <td class="amount amount-fee">
          <%= preview.fee_amount %>
        </td>
      </tr>
      <tr class="last">
        <td>
          <strong><%= t(".total_amount") %></strong>
        </td>
        <td class="amount amount-total">
          <%= preview.total_amount %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
